{
  "name": "gitular",
  "version": "1.0.0",
  "description": "Electron & Angular based Git Client",
  "author": {
    "name": "James Buncle",
    "email": "jbuncle@hotmail.com"
  },
  "homepage": "https://jbuncle.co.uk/gitular",
  "main": "index.js",
  "private": true,
  "scripts": {
    "lint": "tslint  --project ./tsconfig.json",
    "lint-fix": "tslint --fix --project ./tsconfig.json",
    "compile": "tsc --strict -p ./tsconfig.json",
    "postinstall": "ngcc && npm run postinstall:electron && npx electron-builder install-app-deps",
    "postinstall:electron": "node postinstall",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "start:electron": "ng build --base-href ./ && electron .",
    "build": "npm run postinstall:electron && npm run electron:tsc && ng build",
    "ng:serve": "ng serve",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve",
    "electron:local": "npm run build && electron .",
    "pack": "electron-packager --overwrite --platform=linux --prune=true --out=release-builds .",
    "installer": "electron-installer-debian --src release-builds/gitular-linux-x64 --dest release-builds/deb --arch amd64",
    "electron:linux": "npm run build && npm run pack && npm run installer"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@types/lowdb": "^1.0.4",
    "bootstrap": "^4.5.2",
    "electron-installer-debian": "^3.1.0",
    "electron-packager": "^15.0.0",
    "jquery": "^3.5.1",
    "lowdb": "^1.0.0",
    "popper.js": "^1.16.1",
    "tslib": "^2.0.0",
    "typescript": "3.9.7"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1000.5",
    "@angular/cli": "^10.0.5",
    "@angular/common": "10.0.8",
    "@angular/compiler": "10.0.8",
    "@angular/compiler-cli": "10.0.8",
    "@angular/core": "^10.0.8",
    "@angular/forms": "10.0.8",
    "@angular/language-service": "10.0.8",
    "@angular/platform-browser": "10.0.8",
    "@angular/platform-browser-dynamic": "10.0.8",
    "@angular/router": "^10.0.8",
    "@ngx-translate/core": "11.0.1",
    "@ngx-translate/http-loader": "4.0.0",
    "@types/node": "^12.11.1",
    "conventional-changelog-cli": "2.0.21",
    "core-js": "3.1.4",
    "electron": "6.0.10",
    "electron-builder": "^22.8.1",
    "electron-reload": "1.5.0",
    "npm-run-all": "4.1.5",
    "rxjs": "^6.6.2",
    "spectron": "^11.1.0",
    "ts-node": "^8.10.2",
    "tslint": "~6.1.0",
    "tslint-sonarts": "^1.9.0",
    "wait-on": "3.3.0",
    "webdriver-manager": "12.1.5",
    "zone.js": "~0.10.3"
  },
  "engines": {
    "node": ">=10.9.0"
  }
}
