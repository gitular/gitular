{
    "name": "gitular",
    "version": "1.0.0",
    "description": "Electron & Angular based Git Client",
    "author": {
        "name": "James Buncle",
        "email": "jbuncle@hotmail.com"
    },
    "repository": {
        "url": "https://github.com/gitular/gitular.git"
    },
    "homepage": "https://github.com/gitular/gitular",
    "main": "main.js",
    "keywords": [
        "angular",
        "electron",
        "typescript",
        "git",
        "windows",
        "mac",
        "linux"
    ],
    "private": true,
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "ng": "ng",
        "start": "npm-run-all -p electron:serve ng:serve",
        "build": "npm run build:icons && npm run electron:serve-tsc && ng build --base-href ./",
        "build:icons": "node generate-icons",
        "build:run": "npm run build && npx electron .",
        "build:dev": "npm run build -- -c dev",
        "build:prod": "npm run build -- -c production",
        "ng:serve": "ng serve --port 4200",
        "electron:serve-tsc": "tsc -p tsconfig.serve.json",
        "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron . --serve",
        "electron:local": "npm run build:prod && npx electron .",
        "electron:build": "npm run build:prod && electron-builder build --publish=onTag",
        "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
        "lint": "ng lint"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.15.2",
        "angular-split": "^5.0.0",
        "bootstrap": "^4.6.0",
        "diff": "^5.0.0",
        "jquery": "^3.6.0",
        "lowdb": "^1.0.0",
        "popper.js": "^1.16.1"
    },
    "devDependencies": {
        "@angular-builders/custom-webpack": "^11.0.0",
        "@angular-devkit/build-angular": "0.1102.3",
        "@angular-eslint/builder": "^1.2.0",
        "@angular-eslint/eslint-plugin": "^1.2.0",
        "@angular-eslint/eslint-plugin-template": "^1.2.0",
        "@angular-eslint/schematics": "^1.2.0",
        "@angular-eslint/template-parser": "^1.2.0",
        "@angular/cli": "^11.2.0",
        "@angular/common": "^11.2.0",
        "@angular/compiler": "^11.2.0",
        "@angular/compiler-cli": "^11.2.0",
        "@angular/core": "^11.2.0",
        "@angular/forms": "^11.2.0",
        "@angular/language-service": "^11.2.0",
        "@angular/platform-browser": "^11.2.0",
        "@angular/platform-browser-dynamic": "^11.2.0",
        "@angular/router": "^11.2.0",
        "@ngx-translate/core": "13.0.0",
        "@ngx-translate/http-loader": "6.0.0",
        "@types/node": "^12.12.6",
        "@types/sharp": "0.27.1",
        "@typescript-eslint/eslint-plugin": "4.16.1",
        "@typescript-eslint/eslint-plugin-tslint": "4.16.1",
        "@typescript-eslint/parser": "4.16.1",
        "chai": "4.3.3",
        "conventional-changelog-cli": "2.1.1",
        "core-js": "3.9.1",
        "cross-env": "7.0.3",
        "electron": "^11.0.0",
        "electron-builder": "^22.9.1",
        "electron-reload": "^1.5.0",
        "eslint": "^7.21.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsdoc": "^32.2.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "npm-run-all": "^4.1.5",
        "rxjs": "^6.6.6",
        "sharp": "^0.27.2",
        "ts-node": "^9.1.1",
        "tslib": "^2.1.0",
        "typescript": ">=4.0.0 && <4.2.0",
        "wait-on": "^5.2.1",
        "webdriver-manager": "^12.1.8",
        "zone.js": "^0.11.4"
    },
    "engines": {
        "node": ">=10.13.0"
    },
    "browserslist": [
        "chrome 83"
    ]
}
