{
    "name": "gitular",
    "version": "1.0.0",
    "description": "Electron & Angular based Git Client",
    "author": {
        "name": "James Buncle",
        "email": "jbuncle@hotmail.com"
    },
    "homepage": "https://jbuncle.co.uk/gitular",
    "main": "index.js",
    "private": true,
    "scripts": {
        "lint": "tslint  --project ./tsconfig.json",
        "lint-fix": "tslint --fix --project ./tsconfig.json",
        "compile": "tsc --strict -p ./tsconfig.json",
        "postinstall": "npm run postinstall:electron && npx electron-builder install-app-deps",
        "postinstall:electron": "node postinstall",
        "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
        "build": "npm run postinstall:electron && npm run electron:tsc && ng build",
        "ng:serve": "ng serve",
        "electron:tsc": "tsc main.ts",
        "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve",
        "electron:local": "npm run build && electron .",
        "pack": "electron-packager --overwrite --platform=linux --prune=true --out=release-builds .",
        "installer": "electron-installer-debian --src release-builds/gitular-linux-x64 --dest release-builds/deb --arch amd64",
        "electron:linux": "npm run build && npm run pack && npm run installer"
    },
    "dependencies": {
        "electron": "2.0.3",
        "@angular/platform-browser-dynamic": "^6.1.10",
        "@angular/core": "^6.1.10",
        "@angular/router": "^6.1.10",
        "@fortawesome/fontawesome-free": "^5.11.2",
        "@types/lowdb": "^1.0.4",
        "bootstrap": "^4.2.1",
        "electron-installer-debian": "^0.8.1",
        "electron-packager": "^12.1.0",
        "jquery": "^3.3.1",
        "lowdb": "^1.0.0",
        "popper.js": "^1.14.3",
        "typescript": "2.7.2"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "0.6.3",
        "@angular/cli": "^6.1.10",
        "@angular/common": "^6.1.10",
        "@angular/compiler": "^6.1.10",
        "@angular/compiler-cli": "^6.1.10",
        "@angular/forms": "^6.1.10",
        "@angular/http": "^6.1.10",
        "@angular/language-service": "^6.1.10",
        "@angular/platform-browser": "^6.1.10",
        "@ngx-translate/core": "10.0.1",
        "@ngx-translate/http-loader": "3.0.1",
        "@types/jasmine": "2.8.7",
        "@types/jasminewd2": "2.0.3",
        "@types/lodash": "4.14.116",
        "@types/node": "8.9.4",
        "codelyzer": "4.2.1",
        "core-js": "2.5.6",
        "electron-builder": "20.14.7",
        "electron-reload": "1.2.2",
        "jasmine-core": "3.1.0",
        "jasmine-spec-reporter": "4.2.1",
        "karma": "2.0.2",
        "karma-chrome-launcher": "2.2.0",
        "karma-coverage-istanbul-reporter": "2.0.0",
        "karma-jasmine": "1.1.2",
        "karma-jasmine-html-reporter": "1.1.0",
        "npm-run-all": "4.1.3",
        "npx": "10.2.0",
        "protractor": "5.3.2",
        "rxjs": "6.1.0",
        "ts-loader": "^3.2.0",
        "ts-node": "^4.1.0",
        "tslint": "^5.20.0",
        "tslint-sonarts": "^1.7.0",
        "typescript": "^2.9.1",
        "wait-on": "2.1.0",
        "webdriver-manager": "12.0.6",
        "zone.js": "0.8.26"
    }
}
