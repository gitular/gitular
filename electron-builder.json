{
    "productName": "gitular",
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!tsconfig.json",
        "!tslint.json"
    ],
    "win": {
        "icon": "dist/assets/icons",
        "target": [
            "portable"
        ]
    },
    "mac": {
        "icon": "dist/assets/icons",
        "target": [
            "dmg"
        ]
    },
    "linux": {
        "icon": "dist/assets/icons",
        "target": [
            "AppImage",
            "deb"
        ]
    },
    "snap": {
        "confinement": "devmode",
        "grade": "devel"
    }
}
